<script>
// Get all elements with the class "close-button"
const closeButtons = document.querySelectorAll('.close-button');

// Loop through each close button and add a click event listener
closeButtons.forEach((closeButton, index) => {
    closeButton.addEventListener('click', () => {
        const popup = document.getElementById(`popup${index + 1}`);
        popup.style.display = 'none';
    });
});


    // JavaScript code
    function setupBox(boxNumber) {
        const joinNowButton = document.getElementById(`joinNowButton${boxNumber}`);
        const popup = document.getElementById(`popup${boxNumber}`);
        const fulfillButton = document.getElementById(`fulfillButton${boxNumber}`);
        const joinChannelButton = document.getElementById(`joinChannelButton${boxNumber}`);
        const progressBar = document.getElementById(`progress${boxNumber}`);
        let progress = 0;

        joinNowButton.addEventListener('click', () => {
            popup.style.display = 'block';
        });

        fulfillButton.addEventListener('click', () => {
            if (progress < 100) {
                progress += 10;
                progressBar.style.width = progress + '%';
                if (progress === 100) {
                    fulfillButton.style.display = 'none';
                    joinChannelButton.style.display = 'block';
                }
            }
        });
joinChannelButton.style.display = 'none';
        joinChannelButton.addEventListener('click', () => {
            window.location.href = getJoinChannelLink(boxNumber);
        });
    }

    function getJoinChannelLink(boxNumber) {
        switch (boxNumber) {
            case 1:
                return 'https://telegram.me/+XUUIozc8n8Q1ODQ1'; // Replace with the appropriate link for Box 1
            case 2:
                return 'https://telegram.me/+z15kefbYFmA3ZDNl'; // Replace with the appropriate link for Box 2
            case 3:
                return 'https://telegram.me/+RM9GTvwjWro0MjE1'; // Replace with the appropriate link for Box 3
            case 4:
                return 'https://telegram.me/+Enup16EhCPcxNGJl'; // Replace with the appropriate link for Box 4
            case 5:
                return 'https://telegram.me/+a9KH0z2b7vkyOGFl'; // Replace with the appropriate link for Box 5
            case 6:
              return 'https://telegram.me/+b-Xfld8coPxhYzRl'; // Replace with the appropriate link for Box 4    
            default:
                return ''; // Default link
        }
    }

    // Initialize each box
    setupBox(1);
    setupBox(2);
    setupBox(3);
    setupBox(4);
    setupBox(5);
    setupBox(6);
    
</script>

<script>
  const loginPopup = document.getElementById('loginPopup');
  const loginButton = document.getElementById('loginButton');
  let isFormFilled = false;

  // Open the login pop-up when the page loads
  window.addEventListener('load', () => {
    loginPopup.style.display = 'block';
  });

  // Close the pop-up when the login button is clicked
  loginButton.addEventListener('click', () => {
    if (isFormFilled) {
      loginPopup.style.display = 'none';
    } else {
      alert('Please fill out the entire form.');
    }
  });

  // Check if the form is filled out when the pop-up is closed
  window.addEventListener('beforeunload', (event) => {
    if (!isFormFilled) {
      event.returnValue = 'You have not completed the form. Are you sure you want to leave?';
    }
  });

  // Listen for changes in the form fields
  const formFields = document.querySelectorAll('.login-popup input');
  formFields.forEach((field) => {
    field.addEventListener('input', () => {
      isFormFilled = checkFormFilled();
    });
  });

  function checkFormFilled() {
    const name = document.getElementById('name').value;
    const mobile = document.getElementById('mobile').value;
    const email = document.getElementById('email').value;
    const telegram = document.getElementById('telegram').value;

    return name.trim() !== '' && mobile.trim() !== '' && email.trim() !== '' && telegram.trim() !== '';
  }
</script>

